<metro:MetroWindow x:Class="AguaSB.Individual.Pagos.VentanaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:Controles="clr-namespace:AguaSB.Views.Controles;assembly=AguaSB.Views.Controles"
        xmlns:anim="clr-namespace:AguaSB.Views.Controles.Animaciones;assembly=AguaSB.Views.Controles"
        mc:Ignorable="d" Title="Pagos" 
        EnableDWMDropShadow="True" BorderBrush="Black" BorderThickness="0"
        TitleCharacterCasing="Normal" TitleForeground="Transparent"
        WindowTitleBrush="{StaticResource PrimaryDarkBrush}"
        WindowTransitionsEnabled="False"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/FlatButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource PrimaryDarkBrush}">
        <StackPanel VerticalAlignment="Center">
            <Controles:LogoAnimado anim:FadeIn.Delay="0:0:1" anim:FadeIn.Duration="0:0:1" anim:FadeIn.StartWith="True"
                                   Opacity="0"/>
        </StackPanel>

        <StackPanel Name="PanelCarga" Margin="0 64" VerticalAlignment="Bottom" Opacity="0">
            <metro:ProgressRing Foreground="White" Width="36" Height="36"/>
            <TextBlock Name="MensajeCarga" Margin="0 20 0 0" HorizontalAlignment="Center" Style="{StaticResource w-l5}">
                Verificando acceso a base de datos
            </TextBlock>
        </StackPanel>

        <StackPanel Name="PanelError" Margin="0 64" VerticalAlignment="Bottom">
            <TextBlock HorizontalAlignment="Center" Width="400" TextAlignment="Center" TextWrapping="Wrap"
                       Foreground="{StaticResource PrimaryErrorBrush}" Style="{StaticResource w-l4}">
                Ocurrió un error durante la carga de los módulos de pagos
            </TextBlock>
            <Button Margin="0 20 0 0" HorizontalAlignment="Center">
                Reintentar
            </Button>
        </StackPanel>
    </Grid>
</metro:MetroWindow>
