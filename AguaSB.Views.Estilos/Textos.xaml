<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Sys="clr-namespace:System;assembly=mscorlib">
    <!--
        Código de textos:
            <tono>-<peso><tamaño>
        
        tono := [w | b]
            w = blanco
            b = negro
    
        peso := [l | n | h | u]
            l = ligera
            n = normal
            h = pesada     
            u = ultra pesada
    
        tamaño := 1..6 (como los h1..h6 de HTML)
    -->
    
    <!--Pesos-->
    <Style x:Key="l" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
    </Style>

    <Style x:Key="n" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <Style x:Key="h" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>

    <Style x:Key="u" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!--Tamaños-->
    <Sys:Double x:Key="t1">36.0</Sys:Double>
    <Sys:Double x:Key="t2">24.0</Sys:Double>
    <Sys:Double x:Key="t3">21.0</Sys:Double>
    <Sys:Double x:Key="t4">18.0</Sys:Double>
    <Sys:Double x:Key="t5">16.0</Sys:Double>
    <Sys:Double x:Key="t6">14.0</Sys:Double>

    
    <!--CÓDIGO AUTOGENERADO-->
    
    <!--Bases blancas-->
    <Style x:Key="w-l" TargetType="TextBlock" BasedOn="{StaticResource l}">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="w-n" TargetType="TextBlock" BasedOn="{StaticResource n}">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="w-h" TargetType="TextBlock" BasedOn="{StaticResource h}">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="w-u" TargetType="TextBlock" BasedOn="{StaticResource u}">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!--Bases negras-->
    <Style x:Key="b-l" TargetType="TextBlock" BasedOn="{StaticResource l}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style x:Key="b-n" TargetType="TextBlock" BasedOn="{StaticResource n}">
